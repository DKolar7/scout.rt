<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.bsiag.tools.rt</groupId>
    <artifactId>tools.rt</artifactId>
    <version>4.0.0-SNAPSHOT</version>
  </parent>

  <groupId>org.eclipse.scout.rt.ui.html</groupId>
  <artifactId>org.eclipse.scout.rt.ui.html</artifactId>
  <packaging>pom</packaging>

  <modules>
    <module>org.eclipse.scout.rt.ui.json</module>
    <module>org.eclipse.scout.ui.html</module>
    <module>org.eclipse.scout.rt.ui.html-feature</module>
    <module>org.eclipse.scout.rt.ui.html.updatesite</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <configuration>
          <compilerArguments>
            <properties>${project.basedir}/../../com.bsiag.tools.rt.parent/com.bsiag.tools.rt-feature/.settings/org.eclipse.jdt.core.prefs</properties>
          </compilerArguments>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>jacoco</id>
      <properties>
        <!-- Points to the target folder of the global parent project -->
        <sonar.jacoco.reportPath>${project.basedir}/../../target/jacoco.exec</sonar.jacoco.reportPath>
      </properties>
    </profile>
  </profiles>
</project>
