<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout.rt.ui.html.parent</groupId>
    <artifactId>org.eclipse.scout.rt.ui.html.parent</artifactId>
    <version>5.1.0-SNAPSHOT</version>
    <relativePath>../org.eclipse.scout.rt.ui.html.parent</relativePath>
  </parent>

  <artifactId>org.eclipse.scout.rt.svg.ui.html</artifactId>
  <packaging>jar</packaging>

  <properties>
    <scout.script.version>5.0.0</scout.script.version>
  </properties>

  <dependencies>
    <dependency>
      <artifactId>org.eclipse.scout.rt.svg.client</artifactId>
      <groupId>org.eclipse.scout.rt</groupId>
      <version>5.1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <artifactId>org.eclipse.scout.rt.ui.html</artifactId>
      <groupId>org.eclipse.scout.rt.ui.html.parent</groupId>
      <version>5.1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20140107</version>
    </dependency>
  </dependencies>

  <!-- TODO AWE: move the src config to html.parent, remove here -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-resource</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-resource</goal>
            </goals>
            <configuration>
              <resources>
                <resource>
                  <directory>src/main/js</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>add-test-resource</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-resource</goal>
            </goals>
            <configuration>
              <resources>
                <resource>
                  <directory>src/test/js</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
