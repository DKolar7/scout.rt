<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.bsiag.tools.rt</groupId>
    <artifactId>tools.rt</artifactId>
    <version>4.3.0-SNAPSHOT</version>
  </parent>

  <groupId>org.eclipse.scout.rt.ui.html.parent</groupId>
  <artifactId>org.eclipse.scout.rt.ui.html.parent</artifactId>
  <packaging>pom</packaging>

  <properties>
    <!-- use tools target as build platform -->
    <target-platform>tools-rt-build</target-platform>
    <target-groupid>com.bsiag.tools</target-groupid>
    <target-artifactid>com.bsiag.tools.rt.target</target-artifactid>

    <compileSource>1.7</compileSource>
  </properties>

  <modules>
    <module>org.eclipse.scout.rt.ui.html</module>
    <module>org.eclipse.scout.rt.ui.html.test</module>
    <module>org.eclipse.scout.rt.ui.html.thirdparty</module>
    <module>org.eclipse.scout.rt.ui.html-feature</module>
    <module>org.eclipse.scout.rt.ui.html.updatesite</module>
    <module>org.eclipse.scout.rt.ui.html.client.ext</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <configuration>
          <compilerArguments>
            <properties>${project.basedir}/../org.eclipse.scout.rt.ui.html/.settings/org.eclipse.jdt.core.prefs</properties>
          </compilerArguments>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho.extras</groupId>
        <artifactId>tycho-source-feature-plugin</artifactId>
        <configuration>
          <excludes>
  		    <plugin id="org.eclipse.scout.rt.ui.html.thirdparty"/>
	      </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>jacoco</id>
      <properties>
        <!-- Points to the target folder of the global parent project -->
        <sonar.jacoco.reportPath>${project.basedir}/../../target/jacoco.exec</sonar.jacoco.reportPath>
      </properties>
    </profile>
  </profiles>
</project>
