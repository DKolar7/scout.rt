<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.bsiag.tools.rt</groupId>
    <artifactId>tools.rt</artifactId>
    <version>5.1.0-SNAPSHOT</version>
  </parent>

  <groupId>org.eclipse.scout.rt.ui.html.parent</groupId>
  <artifactId>org.eclipse.scout.rt.ui.html.parent</artifactId>
  <packaging>pom</packaging>

  <properties>
    <!-- use tools target as build platform -->
    <target-platform>tools-rt-build</target-platform>
    <target-groupid>com.bsiag.tools</target-groupid>
    <target-artifactid>com.bsiag.tools.rt.target</target-artifactid>

    <compileSource>1.7</compileSource>
  </properties>

  <modules>
    <module>../org.eclipse.scout.rt.ui.html</module>
    <module>../org.eclipse.scout.rt.ui.html.test</module>
    <module>../org.eclipse.scout.rt.ui.html.scriptprocessor</module>
    <module>../org.eclipse.scout.rt.ui.html.client.ext</module>
    <module>../org.eclipse.scout.rt.officeaddin.parent</module>
    <module>../org.eclipse.scout.rt.svg.ui.html</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <!-- Disable error message in m2e. This long xml section is only necessary
          in tycho to make it not display a red error marker... -->
        <!--This plugin's configuration is used to store Eclipse m2e settings
          only. It has no influence on the Maven build itself. -->
        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>

                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>com.github.klieber</groupId>
                    <artifactId>phantomjs-maven-plugin</artifactId>
                    <versionRange>[0.2.1,)</versionRange>
                    <goals>
                      <goal>install</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore></ignore>
                  </action>
                </pluginExecution>

                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <versionRange>[1.1.1,)</versionRange>
                    <goals>
                      <goal>exec</goal>
                      <goal>java</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <execute />
                  </action>
                </pluginExecution>

              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>jacoco</id>
      <properties>
        <!-- Points to the target folder of the global parent project -->
        <sonar.jacoco.reportPath>${project.basedir}/../target/jacoco.exec</sonar.jacoco.reportPath>
      </properties>
    </profile>
  </profiles>
</project>
